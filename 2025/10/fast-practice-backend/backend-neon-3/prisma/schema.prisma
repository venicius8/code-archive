generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nickname  String   @unique
  password  String
  createdAt DateTime @default(now())
  notes     Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  authorId  Int  
  author    User     @relation(fields: [authorId], references: [id]) 
  title     String
  content   String?
  createdAt DateTime @default(now())
}
